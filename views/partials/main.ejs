<main>
  <% locals.posts.forEach(post => { %>
    <p><%= post.created_at.toLocaleDateString('en-EN', { day: 'numeric', month: 'long', year: 'numeric' }); %></p>
    <div class="article-container">
      <img class="article-photo" src="<%=` /images/${post.filename}` %>" alt="Main image of the trip" />
      <div class="article-info-container">
        <h2><%= post.title %></h2>
        <p><%= post.content %></p>
      </div>
    </div>
    <a href="/view-post/<%= post.id %>" class="button">Continue reading</a>
    <hr>
  <% }) %>
</main>